@using Models.Famework;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="product1" class="section-p1">
    <h2>Sản phẩm nổi bật</h2>
    <p>Với giày của Táo mùa đông sẽ không còn lạnh!</p>
    <div class="pro-container">
        @{
            int i = 0;
            foreach (var item in Model)
            {
                if (i < 8)
                {
                <div class="pro">
                    <a href="@Url.Action("ProductDetail","Product",new { @id=item.ProductId})">
                        @{
                            if (item.Photo.Photo1 != null)
                            {
                                <img src=@Url.Content(item.Photo.Photo1) alt="">
                            }
                            else
                            {
                                <img src="~/Asset/Image/Category/not-available.jpg" alt="" />
                            }
                        }
                    </a>
                    <div class="des">
                        <span>@item.Brand.BrandName</span>
                        <h5>@item.ProductName</h5>
                        <div class="star">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <div>
                           @{ 
                               var outh_price = @item.ProductPrice - @item.ProductPrice * @item.Discount / 100;
                           }
                            <h4>-@item.Discount% vnd<del>@item.ProductPrice</del> @outh_price</h4>
                        </div>
                    </div>
                    @*<a href="@Url.Action("AddCart", "Cart", new {@productId=item.ProductId,@quantity=1})"><i class="fa-solid fa-cart-plus cart"></i></a>*@

                </div>
                    i++;
                }
                else
                {
                    break;
                }
            }
        }
    </div>
</section>
