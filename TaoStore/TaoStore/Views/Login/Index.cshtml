@model TaoStore.Models.LoginModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Login/_LayoutLogin.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section">Wellcome to login</h2>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="login-wrap p-0">
            <h3 class="mb-4 text-center">Have an account?</h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true,null,new {@class="alert alert-danger"})
                <div class="form-group">
                    @Html.TextBoxFor(model=>model.UserName,new { @type="text",@class= "form-control", @placeholder = "Email"})
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model=>model.PassWord, new {@id= "password-field", @class= "form-control", @placeholder="Password",@type= "password" } )
                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                </div>
                <div class="form-group d-md-flex">
                    <div class="w-50">
                        <label class="checkbox-wrap checkbox-primary">
                            Remember Me
                            @Html.CheckBoxFor(model => model.Remember, new {@type="checkbox"})
                            @*<input type="checkbox" checked>*@
                            <span class="checkmark"></span>
                        </label>
                    </div>
                    <div class="w-50 text-md-right">
                        <a href="#" style="color: #fff">Forgot Password</a>
                    </div>
                </div>
            }
            @*<form action="#" class="signin-form">
            </form>*@
            <p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
            <div class="social d-flex text-center">
                <a href="@Url.Action("LoginFaceBook","Login")" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
            </div>
        </div>
    </div>
</div>


